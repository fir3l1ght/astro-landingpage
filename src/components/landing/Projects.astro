---
import { projects } from '../../config/projects.json';
---

<h2 class="font-bold text-5xl text-center my-8 mx-8">Proyectos Desarrollados con Astro</h2>

{
  projects.map(project => (
    <div class="flex flex-col mb-2 md:flex-row text-center md:text-left">
      <div class="flex-1 p-4">
        <h2 class="font-bold text-3xl my-4">{project.title}</h2>
        <h3 class="font-bold text-xl mt-4 mb-2">{project.author}</h3>
        <p class="mt-3 mb-5">{project.description}</p>
        <a href={project.url} class="bg-orange-500 rounded-xl px-3 py-2 hover:bg-zinc-300 hover:text-orange-600">
          Visitar Sitio
        </a>
      </div>
      <div class="flex-1 my-4 p-4">
        <img src={project.image} class="w-72 m-auto">
      </div>
    </div>
  ))
}